{
    "compilerOptions": {
      "target": "esnext",
      "outDir": ".",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "composite": true,
      "baseUrl": "./packages",
      "paths": {
        "@grpc-vs-rest/*": ["packages/*/src"]
      }
    },
    "references": [
      { "path": "./packages/api/" },
      { "path": "./packages/apiTypes/" },
      { "path": "./packages/client/" }
    ]
  }
  